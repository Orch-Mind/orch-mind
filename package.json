{
  "name": "orch-os",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "kill-port": "lsof -ti:54321 | xargs -r kill -9 2>/dev/null || true",
    "kill-electron": "pkill -f 'electron.*orch-os' 2>/dev/null || true",
    "cleanup": "npm run kill-port && npm run kill-electron && npm run clean",
    "copy-duckdb": "echo 'âœ… DuckDB WASM files not needed - using native @duckdb/node-api for Electron'",
    "dev": "npm run cleanup && npm run copy-duckdb && NODE_OPTIONS=\"--max-old-space-size=8192 --max-semi-space-size=128\" vite dev --port 54321 --host",
    "dev:safe": "npm run cleanup && sleep 2 && npm run dev",
    "dev:quiet": "npm run cleanup && npm run copy-duckdb && NODE_OPTIONS=\"--max-old-space-size=16384 --max-semi-space-size=256\" vite dev --port 54321 --host",
    "dev:manual": "npm run cleanup && tsc -p tsconfig.electron.json && echo 'Run: npm run vite:start (in one terminal) and npx electron . (in another)'",
    "electron:start": "NODE_OPTIONS=\"--max-old-space-size=8192 --max-semi-space-size=128\" npx electron . --max-old-space-size=8192",
    "electron:start:high-memory": "NODE_OPTIONS=\"--max-old-space-size=8192 --max-semi-space-size=128\" npx electron . --max-old-space-size=8192",
    "electron:start:max-memory": "NODE_OPTIONS=\"--max-old-space-size=16384 --max-semi-space-size=256\" npx electron . --max-old-space-size=16384",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "vite build --config vite.config.ts",
    "build:renderer": "vite build",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder",
    "dist:all": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --mac --win --linux",
    "vite:start": "vite --port 54321 --host",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:verbose": "jest --verbose",
    "monitor-performance": "node scripts/check-performance-simple.js",
    "performance-check": "npm run monitor-performance",
    "performance-monitor": "node performance-monitor.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test-duckdb": "node scripts/test-duckdb.js",
    "test-memory": "node scripts/test-memory-limits.js",
    "test-memory:high": "node --max-old-space-size=8192 scripts/test-memory-limits.js",
    "test-memory:max": "node --max-old-space-size=16384 scripts/test-memory-limits.js"
  },
  "build": {
    "appId": "com.ferrari.orch-os",
    "productName": "Orch-OS",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "maximum",
    "generateUpdatesFilesForAllChannels": true,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "artifactName": "Orch-OS-${arch}.${ext}",
      "icon": "assets/icons/mac/icon.icns",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "identity": null,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": "build/Info.plist",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.15.0",
      "protocols": {
        "name": "orch-os-protocol",
        "schemes": [
          "orch-os"
        ]
      },
      "asarUnpack": [
        "**/*.node"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/win/icon.ico",
      "artifactName": "Orch-OS-${productName}-Windows-${version}.${ext}",
      "protocols": {
        "name": "orch-os-protocol",
        "schemes": [
          "orch-os"
        ]
      }
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons/png/icon-256x256.png",
      "artifactName": "${productName}-Linux-${version}.${ext}",
      "protocols": {
        "name": "orch-os-protocol",
        "schemes": [
          "orch-os"
        ]
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "guiferrarib",
        "repo": "orch-os",
        "private": true,
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "engines": {
    "node": ">=22.16.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.1.1",
    "@duckdb/duckdb-wasm": "^1.29.1-dev132.0",
    "@duckdb/node-api": "^1.3.0-alpha.21",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@heroicons/react": "^2.2.0",
    "@huggingface/transformers": "^3.5.2",
    "@modelcontextprotocol/server-memory": "^2025.4.25",
    "@modelcontextprotocol/server-puppeteer": "^2025.4.7",
    "@modelcontextprotocol/server-sequential-thinking": "^0.6.2",
    "@radix-ui/react-accordion": "^1.2.1",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-toast": "^1.2.13",
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "@react-three/postprocessing": "^3.0.4",
    "@tailwindcss/vite": "^4.1.6",
    "@tanstack/react-query": "^5.76.1",
    "@types/react-window": "^1.8.8",
    "axios": "^1.9.0",
    "cheerio": "^1.0.0-rc.12",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "connect-history-api-fallback": "^2.0.0",
    "dotenv": "^16.5.0",
    "electron-log": "^5.4.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "gpt-tokenizer": "^2.9.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.510.0",
    "onnxruntime-web": "^1.22.0",
    "openai": "^4.98.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "react-window": "^1.8.11",
    "serve-static": "^2.2.0",
    "systeminformation": "^5.27.1",
    "tailwind-merge": "^3.3.0",
    "three": "^0.176.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@electron/typescript-definitions": "^9.1.2",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@eslint/js": "^9.26.0",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/diff": "^7.0.2",
    "@types/electron-store": "^3.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.30",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/serve-static": "^1.15.8",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.4.1",
    "assert": "^2.1.0",
    "autoprefixer": "^10.4.16",
    "buffer": "^6.0.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.1",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "events": "^3.3.0",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.1",
    "playwright": "^1.52.0",
    "postcss": "^8.4.38",
    "process": "^0.11.10",
    "puppeteer": "^24.10.0",
    "purgecss": "^7.0.2",
    "rimraf": "^6.0.1",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "stream-browserify": "^3.0.0",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "url": "^0.11.4",
    "util": "^0.12.5",
    "vite": "^6.3.5",
    "vite-plugin-csp": "^1.1.2",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
