{
  "name": "orch-mind",
  "version": "0.0.1",
  "description": "Orch-Mind - Integrative Symbolic Intelligence Desktop Application",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "kill-port": "lsof -ti:54321 | xargs -r kill -9 2>/dev/null || true",
    "kill-electron": "pkill -f 'electron.*orch-mind' 2>/dev/null || true",
    "cleanup": "npm run kill-port && npm run kill-electron && npm run clean",
    "copy-duckdb": "echo 'âœ… DuckDB native files not needed - using @duckdb/node-api for Electron'",
    "dev": "npm run cleanup && npm run copy-duckdb && NODE_OPTIONS=\"--max-old-space-size=8192 --max-semi-space-size=128\" vite dev --port 54321 --host",
    "dev:safe": "npm run cleanup && sleep 2 && npm run dev",
    "dev:quiet": "npm run cleanup && npm run copy-duckdb && NODE_OPTIONS=\"--max-old-space-size=16384 --max-semi-space-size=256\" vite dev --port 54321 --host",
    "dev:manual": "npm run cleanup && tsc -p tsconfig.electron.json && echo 'Run: npm run vite:start (in one terminal) and npx electron . (in another)'",
    "electron:start": "NODE_OPTIONS=\"--max-old-space-size=8192 --max-semi-space-size=128\" npx electron . --max-old-space-size=8192",
    "electron:start:high-memory": "NODE_OPTIONS=\"--max-old-space-size=8192 --max-semi-space-size=128\" npx electron . --max-old-space-size=8192",
    "electron:start:max-memory": "NODE_OPTIONS=\"--max-old-space-size=16384 --max-semi-space-size=256\" npx electron . --max-old-space-size=16384",
    "build": "npm run build:renderer && npm run build:main",
    "build:main": "vite build --config vite.config.ts",
    "build:renderer": "vite build",
    "dist": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder",
    "dist:all": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --mac --win --linux",
    "dist:mac": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false CSC_LINK= CSC_KEY_PASSWORD= npm run build && electron-builder --mac --publish=always",
    "dist:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --win --publish=always",
    "dist:linux": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npm run build && electron-builder --linux --publish=always",
    "publish": "npm run build && electron-builder --publish=always",
    "publish:patch": "node scripts/publish.js patch",
    "publish:minor": "node scripts/publish.js minor",
    "publish:major": "node scripts/publish.js major",
    "publish:mac": "node scripts/publish.js patch mac",
    "publish:win": "node scripts/publish.js patch win",
    "publish:linux": "node scripts/publish.js patch linux",
    "vite:start": "vite --port 54321 --host",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:verbose": "jest --verbose",
    "monitor-performance": "node scripts/check-performance-simple.js",
    "performance-check": "npm run monitor-performance",
    "performance-monitor": "node performance-monitor.js",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "test-duckdb": "node scripts/test-duckdb.js",
    "test-memory": "node scripts/test-memory-limits.js",
    "test-memory:high": "node --max-old-space-size=8192 scripts/test-memory-limits.js",
    "test-memory:max": "node --max-old-space-size=16384 scripts/test-memory-limits.js"
  },
  "build": {
    "appId": "com.guiferrarib.orchmind",
    "productName": "Orch-Mind",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "electron/**/*",
      "scripts/**/*",
      "node_modules/b4a/**/*",
      "node_modules/hyperswarm/**/*",
      "node_modules/hypercore-crypto/**/*",
      "!**/.git/**",
      "!**/llama.cpp/**",
      "!**/venv/**",
      "!**/training_venv/**",
      "!**/__pycache__/**",
      "!**/.pytest_cache/**",
      "!**/lora_adapters/**",
      "!**/adapters/**",
      "!**/lora_adapter/**",
      "!**/lora_training_output/**",
      "!**/training_output/**",
      "!**/*.pyc",
      "!**/.DS_Store",
      "!**/coverage/**",
      "!**/test-adapters/**"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "maximum",
    "generateUpdatesFilesForAllChannels": true,
    "electronUpdaterCompatibility": ">= 2.16",
    "nodeGypRebuild": false,
    "mac": {
      "target": [
        {
          "target": "pkg",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "artifactName": "Orch-Mind-${arch}.${ext}",
      "icon": "assets/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity":"Guilherme Ferrari Brescia (83B9QD7BNT)",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "extendInfo": "build/Info.plist",
      "category": "public.app-category.productivity",
      "minimumSystemVersion": "10.15.0",
      "bundleShortVersion": "${version}",
      "bundleVersion": "${version}",
      "protocols": {
        "name": "orch-mind-protocol",
        "schemes": [
          "orch-mind"
        ]
      },
      "asarUnpack": [
        "**/*.node",
        "**/b4a/**",
        "**/hyperswarm/**",
        "**/hypercore-crypto/**"
      ],
      "notarize": true
    },
    "pkg": {
      "scripts": "build/postinstall.sh",
      "installLocation": "/Applications",
      "allowAnywhere": false,
      "allowCurrentUserHome": false,
      "allowRootDirectory": true,
      "isRelocatable": false,
      "isVersionChecked": false,
      "hasStrictIdentifier": false,
      "overwriteAction": "upgrade",
      "identity": "Guilherme Ferrari Brescia (83B9QD7BNT)"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icons/win/icon.ico",
      "artifactName": "${productName}-Windows-${version}.${ext}",
      "executableName": "Orch-Mind",
      "legalTrademarks": "Orch-Mind",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": true,
      "verifyUpdateCodeSignature": false,
      "protocols": {
        "name": "orch-mind-protocol",
        "schemes": [
          "orch-mind"
        ]
      },
      "fileAssociations": [
        {
          "ext": "orchmind",
          "name": "Orch-Mind File",
          "description": "Orch-Mind File",
          "role": "Editor"
        }
      ]
    },
    "nsis": {
      "include": "build/install-dependencies.nsh",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Orch-Mind",
      "runAfterFinish": true,
      "perMachine": false,
      "allowElevation": true,
      "deleteAppDataOnUninstall": false
    },
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "assets/icons/png/icon-256x256.png",
      "artifactName": "${productName}-Linux-${version}.${ext}",
      "category": "Development",
      "protocols": {
        "name": "orch-mind-protocol",
        "schemes": [
          "orch-mind"
        ]
      }
    },
    "deb": {
      "afterInstall": "build/postinstall-linux.sh",
      "fpm": [
        "--deb-no-default-config-files"
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "guiferrarib",
        "repo": "orch-mind",
        "private": true,
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/python",
        "to": "scripts/python",
        "filter": [
          "**/*",
          "!**/__pycache__/**",
          "!**/*.pyc",
          "!**/venv/**",
          "!**/training_venv/**",
          "!**/.pytest_cache/**",
          "!**/lora_training_output/**",
          "!**/training_output/**",
          "!**/adapters/**",
          "!**/lora_adapters/**",
          "!**/lora_adapter/**",
          "!**/data/**",
          "!**/llama.cpp/**"
        ]
      }
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "keywords": [
    "electron",
    "desktop",
    "ai",
    "llm",
    "neural",
    "symbolic-intelligence"
  ],
  "author": {
    "name": "Guilherme Ferrari Brescia",
    "email": "guiferrarib@hotmail.com"
  },
  "license": "MIT",
  "engines": {
    "node": ">=22.16.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@deepgram/sdk": "^4.1.1",
    "@duckdb/node-api": "^1.3.0-alpha.21",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@heroicons/react": "^2.2.0",
    "@modelcontextprotocol/server-memory": "^2025.4.25",
    "@modelcontextprotocol/server-puppeteer": "^2025.4.7",
