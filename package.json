    "connect-history-api-fallback": "^2.0.0",
    "dotenv": "^16.5.0",
    "duck-duck-scrape": "^2.2.7",
    "electron-log": "^5.4.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
