{
  "name": "orch-os",
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "scripts": {
    "clean": "rimraf dist dist-electron",
    "dev": "cross-env NODE_ENV=development npm run clean && concurrently \"tsc -w -p tsconfig.electron.json\" \"vite\" \"wait-on http://localhost:54321 && electron .\"",
    "build": "npx vite",
    "deploy": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false npx electron-builder",
    "build:electron:app": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false NODE_ENV=production rimraf dist dist-electron && vite build && tsc -p tsconfig.electron.json && electron-builder",
    "test": "jest",
    "purge-css": "node scripts/purge-css.js",
    "optimize": "npm run purge-css"
  },
  "build": {
    "appId": "com.ferrari.orch-os",
    "productName": "Orch-OS",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "electron/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "asar": true,
    "compression": "maximum",
    "generateUpdatesFilesForAllChannels": true,
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "artifactName": "Orch-OS-${arch}.${ext}",
      "icon": "assets/icons/mac/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "protocols": {
        "name": "orch-os-protocol",
        "schemes": [
          "orch-os"
        ]
      }
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/png/icon-256x256.png",
      "artifactName": "Orch-OS-${productName}-Windows-${version}.${ext}",
      "protocols": {
        "name": "orch-os-protocol",
        "schemes": [
          "orch-os"
        ]
      }
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "icon": "assets/icons/png/icon-256x256.png",
      "artifactName": "${productName}-Linux-${version}.${ext}",
      "protocols": {
        "name": "orch-os-protocol",
        "schemes": [
          "orch-os"
        ]
      }
    },
    "publish": [
      {
        "provider": "github",
        "owner": "guiferrarib",
        "repo": "orch-os",
        "private": true,
        "releaseType": "release"
      }
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraMetadata": {
      "main": "dist-electron/main.js"
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@deepgram/sdk": "^4.1.1",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@pinecone-database/pinecone": "^6.0.0",
    "@radix-ui/react-dialog": "^1.1.13",
    "@radix-ui/react-label": "^2.1.6",
    "@radix-ui/react-slot": "^1.2.2",
    "@radix-ui/react-toast": "^1.2.13",
    "@react-three/drei": "^10.0.7",
    "@react-three/fiber": "^9.1.2",
    "@react-three/postprocessing": "^3.0.4",
    "@tailwindcss/vite": "^4.1.6",
    "@tanstack/react-query": "^5.76.1",
    "@types/react-window": "^1.8.8",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^16.5.0",
    "electron-log": "^5.4.0",
    "electron-store": "^10.0.1",
    "electron-updater": "^6.6.2",
    "gpt-tokenizer": "^2.9.0",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.510.0",
    "openai": "^4.98.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.0",
    "react-window": "^1.8.11",
    "tailwind-merge": "^3.3.0",
    "three": "^0.176.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@electron/typescript-definitions": "^9.1.2",
    "@eslint/js": "^9.26.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/diff": "^7.0.2",
    "@types/electron-store": "^3.2.2",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.18",
    "@types/react": "^19.1.4",
    "@types/react-dom": "^19.1.5",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^36.2.0",
    "electron-builder": "^26.0.12",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.38",
    "purgecss": "^7.0.2",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.3",
    "ts-jest": "^29.3.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "wait-on": "^8.0.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
