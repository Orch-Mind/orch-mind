<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>CFBundleExecutable</key>
  <string>Orch-OS</string>
  <key>CFBundleIdentifier</key>
  <string>com.ferrari.orch-os</string>
  <key>CFBundleName</key>
  <string>Orch-OS</string>
  <key>CFBundleVersion</key>
  <string>1.0.0</string>
  <key>CFBundleShortVersionString</key>
  <string>1.0.0</string>
  <key>LSMinimumSystemVersion</key>
  <string>10.15.0</string>
  <key>LSRequiresNativeExecution</key>
  <true/>
  <key>NSSupportsAutomaticGraphicsSwitching</key>
  <true/>
  <key>NSHighResolutionCapable</key>
  <true/>
  
  <!-- Camera and media permissions -->
  <key>NSCameraUsageDescription</key>
  <string>Este aplicativo precisa acessar a câmera para fornecer funcionalidades de vídeo.</string>
  <key>NSMicrophoneUsageDescription</key>
  <string>Este aplicativo precisa acessar o microfone para capturar áudio.</string>
  <key>NSMediaLibraryUsageDescription</key>
  <string>Este aplicativo precisa acessar sua biblioteca de mídia.</string>
  <key>NSAppleEventsUsageDescription</key>
  <string>Este aplicativo precisa enviar eventos AppleScript para funcionar corretamente.</string>
  
  <!-- Suppress Continuity Camera warnings -->
  <key>NSCameraUseContinuityCameraDeviceType</key>
  <true/>
  
  <!-- URL scheme registration -->
  <key>CFBundleURLTypes</key>
  <array>
    <dict>
      <key>CFBundleURLName</key>
      <string>com.ferrari.orch-os.url</string>
      <key>CFBundleURLSchemes</key>
      <array>
        <string>orch-os</string>
        <string>neural-coder</string>
      </array>
    </dict>
  </array>
  
  <!-- Application category -->
  <key>LSApplicationCategoryType</key>
  <string>public.app-category.productivity</string>
  
  <!-- Background modes -->
  <key>LSUIElement</key>
  <false/>
  <key>LSBackgroundOnly</key>
  <false/>
  
  <!-- Hardware acceleration -->
  <key>NSRequiresAquaSystemAppearance</key>
  <false/>
  
  <!-- Security and performance -->
  <key>NSAppTransportSecurity</key>
  <dict>
    <key>NSAllowsArbitraryLoads</key>
    <true/>
    <key>NSAllowsLocalNetworking</key>
    <true/>
  </dict>
</dict>
</plist> 